<% layout("/layouts/boilerplate") %>

<div class="row m-3">
    <h3 class="COL-6 offset-3 mb-5">Signup for <i>Wonderla</i></h3>
    <div class="col-6 offset-3">
        <form novalidate class="needs-validation" method="post" action="/signup">
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input required class="form-control" type="text" name="username" id="username">
                <div class="valid-feedback">
                    Valid username
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">Enter Password</label>
                <input required class="form-control" type="password" name="password" id="password">
                <div class="valid-feedback">
                    Valid password
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable">Enter your Email</label>
                <input required class="form-control" type="text" name="email" id="email">
                <div class="valid-feedback">
                    Valid Email
                </div>
            </div>
            <div class="mb-3 mt-5">
                <button class="btn btn-outline-success">Done</button>
            </div>
        </form>
    </div>
</div>