<% layout("/layouts/boilerplate") %>
<style>
#filters{
    display: flex;
    align-items: center;
}
.filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
}
.filter:hover{
    opacity: 1;
    cursor: pointer;
}
.filter p{
    font-size: 0.8rem;
}
.taxinfo{
    display: none;
}
</style>

<body>
    <div class="d-flex gap-5" id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Beaches</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></i></div>
            Mountains
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-shop"></i></div>
            Castels
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            Amazing pools
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></i></div>
            Farms
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></i></div>
            snow
        </div>
        <div class="form-check-reverse form-switch
        border rounded-3 bg-secondary text-align py-2 px-5 h-25 text-light">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label " for="flexSwitchCheckDefault">After Taxes</label>
          </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (const listing of allListings) { %>
            <a class="listing-link" href="/listings/<%= listing._id %>">
            <div class="card col" style="width:20rem;">
                <img src="<%= listing.image.url %>" class="card-img-top">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <h5 class="card-title">
                        <b><%= listing.title %></b> <br>
                    </h5>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                    <i class="taxinfo"> +18% gst</i>
                    <br>
                </div>
            </div>
            </a>
            <% } %>
    </div>
    
    <script>
        let taxswitch = document.getElementById('flexSwitchCheckDefault');
        taxswitch.addEventListener("click",()=>{
            let taxinfo = document.getElementsByClassName("taxinfo");
            for ( info of taxinfo) {
                    if(info.style.display!="inline"){
                        info.style.display= "inline";
                    }else{
                        info.style.display="none";
                    }
             }

        })
    </script>
</body>